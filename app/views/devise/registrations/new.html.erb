<section>
  <article>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'flex flex-col gap-y-2' }) do |f| %>
      <div class="flex justify-between items-center h-16 bg-blue-500 px-4 lg:px-14">
        <%= link_to "<", root_path, class: 'text-lg text-white' %>
        <h2 class="text-xl text-white font-semibold">Register</h2> 
        <div class="actions">
          <%= f.submit "Next", class: 'text-white' %>
        </div>
      </div>
      <div class="max-w-sm md:max-w-lg lg:max-w-4xl mx-auto">
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: 'w-full' %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'w-full' %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: 'w-full' %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: 'w-full' %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </article>
</section>